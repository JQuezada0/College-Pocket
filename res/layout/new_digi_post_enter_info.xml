<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <FrameLayout
        android:id="@+id/NewDigiPostEnterInfoFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/NewDigiPostEnterInfoLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="10dp">
    
    <TableRow
                 android:id="@+id/tableRow1"
                 android:layout_width="300dp"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:background="@drawable/actionbar"
                 android:gravity="center" >

                 <TextView
                     android:id="@+id/NewDigiPostEnterInfoTV"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="New DigiPost"
                     android:textColor="#FFFFFF"
                     android:textSize="25sp"
                     android:textStyle="bold|italic" />
             </TableRow>

             <LinearLayout
                 android:layout_width="300dp"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:background="#5F5F5F"
                 android:orientation="vertical"
                 android:padding="10dp" >
                 
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:orientation="vertical"
                     >
                 
                 <TableRow
                 android:id="@+id/TitleTR"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >

                 <EditText
                     android:id="@+id/NewDigiPostEnterTitle"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:hint="Enter a Title"
                     android:layout_weight="1"
                     android:textColorHint="#FFFFFF"
                     android:ems="10" >

                     <requestFocus />
                 </EditText>
                 
                 </TableRow>
 			<TableRow
                 android:id="@+id/PriceTR"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >
                 <EditText
                     android:id="@+id/NewDigiPostEnterPrice"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:ems="10"
                     android:hint="$0.00"
                     android:textColorHint="#FFFFFF"
                     android:inputType="numberDecimal" />
                 </TableRow>
                 
 			 <TableRow
                 android:id="@+id/DescriptionTR"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >

                 <EditText
                     android:id="@+id/NewDigiPostEnterDescription"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:ems="10"
                     android:hint="Enter Description"
                     android:textColorHint="#FFFFFF"
                     android:inputType="textMultiLine" />
                 </TableRow>
                 
 			  <TableRow
                 android:id="@+id/DateTR"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >

                 <EditText
                     android:id="@+id/NewDigiPostEnterDate"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:ems="10"
                     android:hint="Enter Date"
                     android:textColorHint="#FFFFFF"
                     android:inputType="date" />
                 </TableRow>
                 
 			   <TableRow
                 android:id="@+id/TimeTR"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >

                 <EditText
                     android:id="@+id/NewDigiPostEnterTime"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:ems="10"
                     android:hint="Enter time"
                     android:textColorHint="#FFFFFF"
                     android:inputType="time" />
                 </TableRow>
                 
 			    <TableRow
                 android:id="@+id/MaximumOccupancyTR"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >

                 <EditText
                     android:id="@+id/NewDigiPostEnterMaximumOccupancy"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:ems="10"
                     android:hint="Enter Maximum People/Occupancy"
                     android:textColorHint="#FFFFFF"
                     android:inputType="number" />
                 
                 </TableRow>
                 
 			     <TableRow
                 android:id="@+id/SubjectTR"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >

                 <EditText
                     android:id="@+id/NewDigiPostEnterSubject"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:hint="Enter Academic Subject"
                     android:textColorHint="#FFFFFF"
                     android:ems="10" />
                 
                 </TableRow>
                 
 			      <TableRow
                 android:id="@+id/LocationOfOriginTR"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >

                 <EditText
                     android:id="@+id/NewDigiPostEnterLocationOfOrigin"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:hint="Enter Start Location"
                     android:textColorHint="#FFFFFF"
                     android:ems="10" />
                 
                 </TableRow>
                 
 			       <TableRow
                 android:id="@+id/DestinationTR"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >

                 <EditText
                     android:id="@+id/NewDigiPostEnterDestination"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:hint="Enter Destination"
                     android:textColorHint="#FFFFFF"
                     android:ems="10" />
                 
                 </TableRow>
                 
 			       </LinearLayout>
 			       
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:orientation="vertical"
                     >

 			       <TableRow
 			           android:id="@+id/tableRow2"
 			           android:layout_width="match_parent"
 			           android:layout_height="match_parent" >

 			           <ImageButton
 			               android:id="@+id/NewDigiPostIMG1"
 			               android:layout_width="100dp"
 			               android:layout_height="100dp"
 			               android:scaleType="center"
 			               android:background="#00000000"
 			               android:src="@android:drawable/ic_menu_add" />
 			            <ImageButton
 			               android:id="@+id/NewDigiPostIMG2"
 			               android:layout_width="100dp"
 			               android:layout_height="100dp"
 			               android:scaleType="center"
 			               android:background="#00000000"
 			               android:src="@android:drawable/ic_menu_add" />
 			             <ImageButton
 			               android:id="@+id/NewDigiPostIMG3"
 			               android:layout_width="100dp"
 			               android:layout_height="100dp"
 			               android:scaleType="center"
 			               android:background="#00000000"
 			               android:src="@android:drawable/ic_menu_add" />

 			       </TableRow>
 			       <TableRow
 			           android:id="@+id/tableRow2"
 			           android:layout_width="match_parent"
 			           android:layout_height="match_parent" >

 			           <ImageButton
 			               android:id="@+id/NewDigiPostIMG4"
 			               android:layout_width="100dp"
 			               android:layout_height="100dp"
 			               android:scaleType="center"
 			               android:background="#00000000"
 			               android:src="@android:drawable/ic_menu_add" />
 			            <ImageButton
 			               android:id="@+id/NewDigiPostIMG5"
 			               android:layout_width="100dp"
 			               android:layout_height="100dp"
 			               android:scaleType="center"
 			               android:background="#00000000"
 			               android:src="@android:drawable/ic_menu_add" />
 			             <ImageButton
 			               android:id="@+id/NewDigiPostIMG6"
 			               android:layout_width="100dp"
 			               android:layout_height="100dp"
 			               android:scaleType="center"
 			               android:background="#00000000"
 			               android:src="@android:drawable/ic_menu_add" />

 			       </TableRow>
 			       
 			       </LinearLayout>

                 <Button
                     android:id="@+id/NewDigiPostEnterInfoSubmitBtn"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:background="@drawable/signup_selector"
                     android:gravity="center"
                     android:padding="5dp"
                     android:text="Create Post!"
                     android:textSize="20sp" />
       
             </LinearLayout>
</LinearLayout>
<ProgressBar
        android:id="@+id/NewDigiPostEnterInfoLoading"
        android:layout_width="200dp"
        android:layout_height="128dp"
        android:layout_gravity="center"
        android:visibility="gone"
        style="@style/CustomProgressBar" />
</FrameLayout>
</ScrollView>
