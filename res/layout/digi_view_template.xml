<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    
    

<LinearLayout  
    android:id="@+id/DigiViewTemplateLinearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/abc_menu_dropdown_panel_holo_light"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/DigiViewImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/abc_ab_bottom_solid_dark_holo" />
    
    <LinearLayout
        android:id="@+id/DigiViewLinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
    
    
    <LinearLayout
        android:id="@+id/DigiViewLinearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

    <TextView
        android:id="@+id/DigiViewTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/DigiViewTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/DigiViewTextView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />
    
    </LinearLayout>
    
    <Button
            android:id="@+id/DigiViewButton"
            android:layout_width="43dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/abc_ic_menu_moreoverflow_normal_holo_light"
/>
    
    </LinearLayout>

</LinearLayout>

</FrameLayout>
