<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/CampusAgendaGeneralFragmentContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/CampusAgendaGeneralFragmentLL" >"

    <ListView
        android:id="@+id/CampusAgendaItemsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

    <LinearLayout
        android:id="@+id/CampusAgendaAddItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="30dp"
        >

    <TextView
        android:id="@+id/CampusAgendaAddItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#00AAD4"
        android:gravity="left|center_vertical"
        android:layout_marginRight="25dp"
        android:text="Click here to add new Course" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="right|center_vertical"
        android:scaleType="fitXY"
        android:src="@drawable/plus" />
    
    </LinearLayout>

</LinearLayout>

</FrameLayout>
